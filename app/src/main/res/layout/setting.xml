<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <driver.com.driver.ui.RoundedImageView
        android:id="@+id/setting_profile_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/profile_image" />

    <ScrollView
        android:id="@+id/setting_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_profile_icon"
        android:layout_marginTop="@dimen/_5sdp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelogo"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting_ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"

                android:textCursorDrawable="@null">

                <ImageView
                    android:id="@+id/setting_image_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="bottom"
                    android:src="@drawable/email_icon1" />

                <EditText
                    android:id="@+id/setting_et_emailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:background="@color/white"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_email"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:textCursorDrawable="@null">

                <ImageView
                    android:id="@+id/setting_image_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_mobile" />

                <EditText
                    android:id="@+id/setting_et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:enabled="true"
                    android:gravity="center_vertical"
                    android:hint="@string/mobileno"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_mobile"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:textCursorDrawable="@null">

                <ImageView
                    android:id="@+id/setting_image_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_password" />

                <TextView
                    android:id="@+id/setting_txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableRight="@drawable/arrow"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />


            <LinearLayout
                android:id="@+id/setting_ll_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_password"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:textCursorDrawable="@null">

                <ImageView
                    android:id="@+id/setting_image_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/setting_et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/firstname"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_firstname"
                android:background="@color/white"
                android:enabled="false"
                android:gravity="center"
                android:orientation="horizontal"


                android:textCursorDrawable="@null">

                <ImageView
                    android:id="@+id/setting_image_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/setting_et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/lastname"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_ll_acceptjobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerLinear"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textCursorDrawable="@null">

                <ImageView
                    android:id="@+id/setting_image_acceptjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/icon_jobs" />


                <ToggleButton
                    android:id="@+id/toggleButton1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/customtogglebutton"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />


                <TextView
                    android:id="@+id/setting_txt_acceptjobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_toEndOf="@+id/setting_image_acceptjob"
                    android:layout_toRightOf="@+id/setting_image_acceptjob"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/Acceptnewjob"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

            </RelativeLayout>

            <TextView
                android:id="@+id/setting_txt_divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_txt_acceptjobs"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_image_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_insurance" />

                <TextView
                    android:id="@+id/setting_et_insurancedoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/insurancedoc"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/medium" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/setting_btn_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redbtnbackground"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/btnsignout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/large" />


</RelativeLayout>