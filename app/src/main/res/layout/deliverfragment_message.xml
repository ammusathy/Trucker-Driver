<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fragment_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:id="@+id/fragment_rl_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_image_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/imgpsh_fullsize" />

            <EditText
                android:id="@+id/fragment_et_empty"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:layout_alignTop="@+id/fragment_image_camera"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/fragment_txt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_55sdp"
                android:text="@string/send" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>











