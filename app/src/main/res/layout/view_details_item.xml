<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:id="@+id/viewdetails_tv_servicelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsdfsdf"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:id="@+id/viewdetails_tv_servicevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewdetails_tv_servicelabel"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/viewdetails_tv_servicecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewdetails_tv_servicelabel"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:id="@+id/viewdetails_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewdetails_tv_servicelabel"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/minus_icon"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/_13sdp"
            android:text="amount" />
    </RelativeLayout>
</LinearLayout>
