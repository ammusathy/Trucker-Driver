<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/joblist_truck_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/truck_ship" />


    <LinearLayout
        android:id="@+id/joblist_ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/joblist_ll_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/joblist_image_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/source" />

            <TextView
                android:id="@+id/joblist_et_pickupaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_38sdp"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/source"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/joblist_ll_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job_image_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/icon_calendar" />

            <TextView
                android:id="@+id/joblist_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/job_image_date"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/ddmmyyyy"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />


            <ImageView
                android:id="@+id/job_image_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/icon_alarm" />

            <TextView
                android:id="@+id/joblist_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/txt_hrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/hrs"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">


            <ImageView
                android:id="@+id/job_image_dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:src="@drawable/icon_dollar"
                android:layout_marginStart="24dp"
                android:layout_alignBottom="@+id/joblist_txt_dollar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/joblist_txt_dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/job_dollar"
                android:text="@string/txtdollar"
                android:textColor="#3e991c"
                android:textSize="@dimen/small"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/job_image_dollar"
                android:layout_toEndOf="@+id/job_image_dollar"
                />
            <!--   </LinearLayout>-->

            <!-- <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/_45sdp">-->


            <ImageView
                android:id="@+id/joblist_image_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_92sdp"
                android:layout_alignBottom="@+id/joblist_txt_dollar" />

            <TextView
                android:id="@+id/joblist_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_status"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_alignLeft="@+id/joblist_image_status"
                android:textSize="@dimen/small"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>